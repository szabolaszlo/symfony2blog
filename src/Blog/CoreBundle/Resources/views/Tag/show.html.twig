{% extends "CoreBundle::layout.html.twig" %}

{% block title %}{{ 'post.by.tag' | trans({ '%name%': tag.name }) }}{% endblock %}

{% block sidebar %}
    <aside>
        <h3>{{ 'tag.with' | trans }}</h3>

        <p>{{ tag.name }}</p>
    </aside>
{% endblock %}

{% block section %}

    {% for post in posts %}
        {{ include('CoreBundle:Post:_post.html.twig', { post: post }) }}
    {% else %}
        <p>{{ 'tag.empty.posts' | trans }}</p>
    {% endfor %}

{% endblock %}